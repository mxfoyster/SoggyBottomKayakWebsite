/* Our CSS for the custom login box. Will be extracted to a separate sheey=t later me thinks :-D */
.ourLoginBox
{
	position: absolute;
	left: 50%;
	top: 50%;
	background-color: linen;
	border-radius: 25px;
	border: 3px solid mediumblue;
	padding: 20px;
	text-align: center;
	width: 500px;
	height: 250px;	
	transform: translate(-50%, -50%);
	visibility: hidden;
}

.ourLoginMessage
{
	width: 400px;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}

.ourLoginSubmit
{
	position: absolute;
	bottom: 6%;
	left: 50%;
	transform: translate(-50%, -50%);/* Fast becoming by favourite bit of css allowing for dimensions of element */
}

#capsAlert
{
	color: red;
	display: none;
	position: relative;
	right: 180px;
}
/* End of custom login box css */