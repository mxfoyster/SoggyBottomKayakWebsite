/* This is the styling for our article box */
/* It's similar to our login box because both are code I've recycled from my wordgame project */

.ourArticleBox
{
	position: absolute;
	left: 50%;
	top: 50%;
	background-color: linen;
	border-radius: 25px;
	border: 3px solid mediumblue;
	padding: 20px;
	text-align: center;
	width: 600px;
	height: 600px;	
	transform: translate(-50%, -50%);
	visibility: hidden;
	z-index: 1;
}

.ourArticleText
{
	width: 550px;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}

.ourArticleExit
{
	position: absolute;
	bottom: 6%;
	left: 50%;
	transform: translate(-50%, -50%);/* Fast becoming by favourite bit of css allowing for dimensions of element */
}

.articles:hover
{
	background-color: lightblue;
}	